<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activitys.SettingActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">
        <ImageView
            android:id="@+id/setting_imageview_return"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/imageview_return_parent"
            android:layout_gravity="center_vertical"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/armd"
            android:text="Setting"
            android:textColor="@color/colorFontBlack"
            android:textSize="50dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.9"
        android:padding="10dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_corner_linearlayout_userinfo_item"
            android:layout_margin="5dp"
            android:padding="10dp">
            <ImageView
                android:id="@+id/setting_imageview_headportrait"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/emoji"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_margin="5dp"
            android:background="@drawable/shape_corner_linearlayout_userinfo_item">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="userId:"/>
            <TextView
                android:id="@+id/setting_textview_userid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="xxx"/>
        </LinearLayout>
        <LinearLayout
            android:padding="10dp"
            android:layout_margin="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_corner_linearlayout_userinfo_item">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="userName:"/>
            <TextView
                android:id="@+id/setting_textview_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="xxx"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_margin="5dp"
            android:background="@drawable/shape_corner_linearlayout_userinfo_item">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="password:"/>
            <TextView
                android:id="@+id/setting_textview_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="xxx"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_margin="5dp"
            android:background="@drawable/shape_corner_linearlayout_userinfo_item">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Birthday Month:"/>
            <TextView
                android:id="@+id/setting_textview_birthdaymonth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="xxx"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_margin="5dp"
            android:background="@drawable/shape_corner_linearlayout_userinfo_item">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Birthday Day:"/>
            <TextView
                android:id="@+id/setting_textview_birthdayday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="xxx"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1"
        android:gravity="center">
        <TextView
            android:id="@+id/setting_textview_exit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:fontFamily="@font/armd"
            android:text="Exit"/>
    </LinearLayout>
</LinearLayout>