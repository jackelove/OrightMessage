<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/shape_corner_all_listview_message"
        android:gravity="center_vertical"
        android:padding="10dp">

        <ImageView
            android:id="@+id/friend_imageview_headportrait"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="5dp"
            android:background="@drawable/shape_demo1" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/friend_textview_friendname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:maxLines="1"
                android:maxEms="5"
                android:ellipsize="end"
                android:textSize="15dp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/friend_linearlayout_accept"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.6"
            android:gravity="center"
            android:orientation="horizontal">
            <Button
                android:id="@+id/friend_button_meisaccept"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:background="@drawable/shape_corner_all_button_me"
                android:focusable="false"
                android:text="Me" />
            <Button
                android:id="@+id/friend_textview_friendisaccept"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:layout_margin="5dp"
                android:background="@drawable/shape_corner_all_button_friend"
                android:gravity="center"
                android:enabled="false"
                android:focusable="false"
                android:text="Friend" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>