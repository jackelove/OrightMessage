<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:orientation="horizontal">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/shape_corner_all_listview_message"
        android:gravity="center_vertical"
        android:padding="10dp">
        <ImageView
            android:id="@+id/message_imageview_headportrait"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="5dp"
            android:background="@drawable/shape_demo1"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="vertical">
            <TextView
                android:id="@+id/message_textview_friendName"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="0.5"
                android:gravity="bottom"
                android:textSize="15dp"
                android:textStyle="bold"
                android:text="Object"/>
            <TextView
                android:id="@+id/message_textview_chatContent"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="0.5"
                android:gravity="top"
                android:maxLines="1"
                android:maxEms="15"
                android:ellipsize="end"
                android:textSize="13dp"
                android:text="context"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>